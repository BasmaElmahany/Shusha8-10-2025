@model Shusha_project_BackUp.DailySales

@{
    ViewData["Title"] = "تعديل";
}

<div class="container my-5" dir="rtl">
    <h1 class="text-center mb-4">تعديل سجل الإنتاج اليومي</h1>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="id" />

                        <!-- Ward Selection -->
                        <div class="form-group mb-3">
                            <label asp-for="ward_id" class="form-label">اسم العنبر</label>
                            <select asp-for="ward_id" class="form-control">
                                <option value="">اختر العنبر</option>
                                @* Use this if ViewBag.ward_id contains the available options *@
                                @foreach (var item in ViewBag.ward_id as SelectList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <span asp-validation-for="ward_id" class="text-danger"></span>
                        </div>

                        <!-- White Eggs Input -->
                        <div class="form-group mb-3">
                            <label asp-for="No_of_Wheggs" class="form-label">عدد البيض الأبيض</label>
                            <input asp-for="No_of_Wheggs" class="form-control" min="0"  />
                            <span asp-validation-for="No_of_Wheggs" class="text-danger"></span>
                        </div>

                        <!-- Brown Eggs Input -->
                        <div class="form-group mb-3">
                            <label asp-for="No_of_Breggs" class="form-label">عدد البيض البني</label>
                            <input asp-for="No_of_Breggs" class="form-control" min="0"  />
                            <span asp-validation-for="No_of_Breggs" class="text-danger"></span>
                        </div>

                        <!-- Dead White Herd Input -->
                        <div class="form-group mb-3">
                            <label asp-for="Whdead_herd" class="form-label">عدد الطيور النافقة (أبيض)</label>
                            <input asp-for="Whdead_herd" class="form-control" min="0" />
                            <span asp-validation-for="Whdead_herd" class="text-danger"></span>
                        </div>
                        <!-- Dead White Herd Input -->
                        <div class="form-group mb-3">
                            <label asp-for="no_of_carton_broken" class="form-label">عدد البيض الكسر</label>
                            <input asp-for="no_of_carton_broken" class="form-control" min="0" />
                            <span asp-validation-for="no_of_carton_broken" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="double_eggs" class="form-label">عدد البيض مزدوج الصفارة</label>
                            <input asp-for="double_eggs" class="form-control" min="0" />
                            <span asp-validation-for="double_eggs" class="text-danger"></span>
                        </div>
                        <!-- Dead Brown Herd Input -->
                        <div class="form-group mb-3">
                            <label asp-for="Brdead_herd" class="form-label">عدد الطيور النافقة (بني)</label>
                            <input asp-for="Brdead_herd" class="form-control" min="0" />
                            <span asp-validation-for="Brdead_herd" class="text-danger"></span>
                        </div>

                        <!-- Date Input -->
                        <div class="form-group mb-3">
                            <label asp-for="Date" class="form-label">التاريخ</label>
                            <input asp-for="Date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-save"></i> حفظ التعديلات
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Back to Index Button -->
    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> الرجوع إلى القائمة
        </a>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}}

