@model Shusha_project_BackUp.Data.Medicine

@{
    ViewData["Title"] = "إضافة دواء جديد";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">

<div dir="rtl" class="container mt-2">
    <h1 class="text-center mb-2" style="font-size: 1.25rem;">إضافة دواء جديد</h1>

    <form asp-action="Create" method="post" class="p-2 border rounded shadow-sm">
        <!-- Medicine Name -->
        <div class="form-group mb-2">
            <label for="Name" class="form-label" style="font-size: 0.9rem;">اسم الدواء</label>
            <input type="text" class="form-control form-control-sm" id="Name" name="Name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div class="form-group mb-2">
            <label for="Description" class="form-label" style="font-size: 0.9rem;">الوصف</label>
            <textarea class="form-control form-control-sm" id="Description" name="Description" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Quantity and Price in One Row -->
        <div class="row mb-2">
            <!-- Quantity -->
            <div class="col-6">
                <label for="Quantity" class="form-label" style="font-size: 0.9rem;">الكمية</label>
                <input type="number" class="form-control form-control-sm" id="Quantity" name="Quantity" value="0" required />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="col-6">
                <label for="Price" class="form-label" style="font-size: 0.9rem;">السعر</label>
                <input type="number" class="form-control form-control-sm" id="Price" name="Price" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label for="Type" class="form-label" style="font-size: 0.9rem;">الوحدة</label>
                <textarea class="form-control form-control-sm" id="Type" name="Type" required></textarea>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

        </div>

        <!-- Production Date and Expiration Date in One Row -->
        <div class="row mb-2">
            <!-- Production Date -->
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="ProductionDate" class="control-label">تاريخ الانتاج</label>
                    <input asp-for="ProductionDate" class="form-control" />
                    <span asp-validation-for="ProductionDate" class="text-danger"></span>
                </div>
            </div>

            <!-- Expiration Date -->
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="ExpirationDate" class="control-label">تاريخ الانتهاء</label>
                    <input asp-for="ExpirationDate" class="form-control" />
                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                </div>
                </div>
        </div>

        <!-- Submit and Back Buttons -->
        <div class="row mt-2">
            <div class="col-6">
                <button type="submit" class="btn btn-primary btn-sm w-100">حفظ</button>
            </div>
            <div class="col-6">
                <a href="@Url.Action("Index", "Medicine")" class="btn btn-secondary btn-sm w-100">رجوع إلى قائمة الأدوية</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

}
