@model Shusha_project_BackUp.Data.Medicine

@{
    ViewData["Title"] = "تعديل الدواء";
}
<div class="container" dir="rtl">
    <h1 class="text-center mb-4">تعديل الدواء</h1>

    <form asp-action="Edit" method="post" class="p-4 border rounded shadow-sm">
        <div class="form-group mb-3">
            <label for="Name"><strong>اسم الدواء</strong></label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Description">الوصف</label>
            <textarea class="form-control" id="Description" name="Description" required>@Model.Description</textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Quantity">الكمية</label>
            <input type="number" class="form-control" id="Quantity" name="Quantity" value="@Model.Quantity" required />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Price">السعر</label>
            <input type="number" class="form-control" id="Price" name="Price" value="@Model.Price" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="Type">الوحدة</label>
            <textarea class="form-control" id="Type" name="Type" required>@Model.Type</textarea>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <!-- Production Date and Expiration Date in One Row -->
        <div class="row mb-2">
            <!-- Production Date -->
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="ProductionDate" class="control-label">تاريخ الانتاج</label>
                    <input asp-for="ProductionDate" class="form-control" value="@Model.ProductionDate"/>
                    <span asp-validation-for="ProductionDate" class="text-danger"></span>
                </div>
            </div>

            <!-- Expiration Date -->
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="ExpirationDate" class="control-label">تاريخ الانتهاء</label>
                    <input asp-for="ExpirationDate" class="form-control" value="@Model.ExpirationDate" />
                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary btn-lg w-100">تحديث</button>
    </form>

    <a href="@Url.Action("Index", "Medicine")" class="btn btn-secondary btn-lg mt-3 w-100">رجوع إلى قائمة الأدوية</a>
</div>
