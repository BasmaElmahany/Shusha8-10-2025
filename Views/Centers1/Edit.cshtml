@model Shusha_project_BackUp.Center

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div dir="rtl" class="container mt-5">

    <h1 class="text-center">تعديل المركز</h1>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>تعديل تفاصيل المركز</h4>
        </div>
        <div class="card-body" dir="rtl">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="centerId" />

                <div class="form-group" dir="rtl">
                    <label asp-for="centerName" class="control-label">اسم المركز</label>
                    <input asp-for="centerName" class="form-control" />
                    <span asp-validation-for="centerName" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success">حفظ</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">عودة إلى القائمة</a>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
