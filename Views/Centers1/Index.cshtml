@model IEnumerable<Shusha_project_BackUp.Center>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div dir="rtl" class="container mt-5">

    <h1 class="text-center text-primary">عرض جميع المراكز</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">إنشاء مركز جديد</a>
    </div>

    <table id="dataTable" class="table table-striped table-bordered text-center">
        <thead class="bg-primary text-white">
            <tr>
                <th>المركز</th>
                <th>الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.centerName)</td>
                    <td>
                        @if (User.IsInRole("Admin")){
                            <a asp-action="Edit" asp-route-id="@item.centerId" class="btn btn-warning btn-sm">تعديل</a>
                            <a asp-action="Delete" asp-route-id="@item.centerId" class="btn btn-danger btn-sm">حذف</a>
                        }
                       
                        <a asp-action="Details" asp-route-id="@item.centerId" class="btn btn-info btn-sm">تفاصيل</a> 
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                language: {
                    url: "https://cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json"
                }
            });
        });
    </script>
}
