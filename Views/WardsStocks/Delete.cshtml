@model Shusha_project_BackUp.Data.WardsStock

@{
    ViewData["Title"] = "حذف";
}

<!-- Bootstrap RTL -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
<!-- Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<h1 class="text-danger">
    <i class="fas fa-trash-alt"></i> @ViewData["Title"]
</h1>

<h3 class="text-warning">هل أنت متأكد أنك تريد حذف هذا السجل؟</h3>

<div>
    <h4 class="text-primary">بيانات المخزون</h4>
    <hr />
    <dt class="col-sm-3 text-end">
        العنبر
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.ward.WardName)
    </dd>
    <dl class="row">
        <dt class="col-sm-3 text-end">
           البيض الابيض بالكرتونة
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.whiteEggs)
        </dd>
        <dt class="col-sm-3 text-end">
             البيض الابيض المتبقي بالكرتونة
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.rest_whEggs)
        </dd>
        <dt class="col-sm-3 text-end">
            البيض البني بالكرتونة
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.brownEggs)
        </dd>
        <dt class="col-sm-3 text-end">
            البيض البني المتبقي بالكرتونة
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.rest_brEggs)
        </dd>
        <dt class="col-sm-3 text-end">
            البيض الكسر بالكرتونة
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.brokenEggs)
        </dd>
        <dt class="col-sm-3 text-end">
            البيض الكسر المتبقي بالكرتونة
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.rest_bkEggs)
        </dd>
        <dt class="col-sm-3 text-end">
            البيض مزدوج الصفارة بالكرتونة
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.doubleEggs)
        </dd>
        <dt class="col-sm-3 text-end">
            البيض مزدوج الصفارة المتبقي بالكرتونة
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.rest_dbEggs)
        </dd>
       
        <dt class="col-sm-3 text-end">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="stockID" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> حذف
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> العودة إلى القائمة
        </a>
    </form>
</div>
