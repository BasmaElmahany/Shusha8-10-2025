@model IEnumerable<Shusha_project_BackUp.Data.HerdSales>

@{
    ViewData["Title"] = "مبيعات القطيع";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-dove text-primary"></i> مبيعات القطيع</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> إنشاء جديد
        </a>
    </div>

    <div class="card shadow border-0">
        <div class="card-body">
            <table id="herdSalesTable" class="table table-bordered table-striped text-center">
                <thead class="table-dark">
                    <tr>
                        <th>التاريخ</th>
                        <th>عدد الأبيض</th>
                        <th>وزن/دجاجة (أبيض)</th>
                        <th>سعر الكيلو (أبيض)</th>
                        <th>إجمالي المطلوب (أبيض)</th>
                        <th>عدد البني</th>
                        <th>وزن/دجاجة (بني)</th>
                        <th>سعر الكيلو (بني)</th>
                        <th>إجمالي المطلوب (بني)</th>
                        <th>الإجمالي الكلي</th>
                        <th>تم التسديد؟</th>
                        <th>إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Date.ToShortDateString()</td>
                            <td>@item.NO_wh_herd</td>
                            <td>@item.weight_white</td>
                            <td>@item.wh_price_kilo</td>
                            <td class="text-success fw-bold">@item.req_total_wh</td>
                            <td>@item.NO_br_herd</td>
                            <td>@item.weight_brown</td>
                            <td>@item.br_price_kilo</td>
                            <td class="text-success fw-bold">@item.req_total_br</td>
                            <td class="text-primary fw-bold">@item.total_request_proceed</td>
                            <td>
                                @if (item.IsPaid)
                                {
                                    <span class="badge bg-success"><i class="fas fa-check-circle"></i> نعم</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger"><i class="fas fa-times-circle"></i> لا</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.id" class="btn btn-sm btn-info text-white">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#herdSalesTable').DataTable({
                 "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.13.1/i18n/Arabic.json",  // Load Arabic language for RTL support
                    "emptyTable": "لا توجد بيانات لعرضها",  // Custom message when there is no data
                    "paginate": {
                        "first": "الأول",
                        "last": "الآخر",
                        "next": "التالي",
                        "previous": "السابق"
                    },
                    "info": "عرض _START_ إلى _END_ من _TOTAL_ عنبر",
                    "infoEmpty": "لا توجد بيانات لعرضها",
                    "infoFiltered": "(تم تصفيتها من _MAX_ إجمالي العناصر)"
                },
                "pagingType": "full_numbers", // Full pagination controls (next/previous, page numbers)
                "responsive": true,           // Makes the table responsive on smaller screens
                "ordering": true              // Allow column sorting
            });
        });
    </script>

}
