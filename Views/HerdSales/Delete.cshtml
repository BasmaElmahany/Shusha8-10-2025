@model Shusha_project_BackUp.Data.HerdSales

@{
    ViewData["Title"] = "حذف";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<div class="container mt-5" dir="rtl">
    <div class="card shadow rounded-3 border-danger">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-trash-alt me-2"></i> تأكيد الحذف</h4>
        </div>
        <div class="card-body">
            <p class="text-danger"><strong>هل أنت متأكد أنك تريد حذف هذا السجل؟</strong></p>
            <dl class="row">
                <dt class="col-sm-4"><i class="fas fa-hashtag text-secondary"></i> عدد القطيع الأبيض</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NO_wh_herd)</dd>

                <dt class="col-sm-4"><i class="fas fa-weight text-secondary"></i> وزن الأبيض</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.weight_white)</dd>

                <dt class="col-sm-4"><i class="fas fa-dollar-sign text-secondary"></i> سعر الكيلو الأبيض</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.wh_price_kilo)</dd>

                <dt class="col-sm-4"><i class="fas fa-dollar-sign text-secondary"></i> اجمالي المطلوب لمبيعات الابيض</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.req_total_wh)</dd>

                <dt class="col-sm-4"><i class="fas fa-hashtag text-secondary"></i> عدد القطيع البني</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NO_br_herd)</dd>

                <dt class="col-sm-4"><i class="fas fa-weight text-secondary"></i> وزن البني</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.weight_brown)</dd>

                <dt class="col-sm-4"><i class="fas fa-dollar-sign text-secondary"></i> سعر الكيلو البني</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.br_price_kilo)</dd>

                <dt class="col-sm-4"><i class="fas fa-dollar-sign text-secondary"></i> اجمالي المطلوب لمبيعات البني</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.req_total_br)</dd>

                <dt class="col-sm-4"><i class="fas fa-dollar-sign text-secondary"></i> اجمالي المطلوب </dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.total_request_proceed)</dd>

                <dt class="col-sm-4"><i class="fas fa-calendar-alt text-secondary"></i> التاريخ</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Date)</dd>

                <dt class="col-sm-4"><i class="fas fa-money-bill-wave text-secondary"></i> هل تم الدفع؟</dt>
                <dd class="col-sm-8">
                    @(Model.IsPaid ? "نعم" : "لا")
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="id" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash"></i> حذف
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> الرجوع للقائمة
                </a>
            </form>
        </div>
    </div>
</div>
