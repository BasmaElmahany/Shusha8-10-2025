@model Shusha_project_BackUp.Data.FeedPurchases

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div dir="rtl">
<h1 class="text-center my-4">حذف</h1>

<h3 class="text-center">هل أنت متأكد أنك تريد الحذف؟</h3>
<div class="bg-light p-4 rounded shadow-sm">
    <h4>تفاصيل البيانات</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">كمية بالأطنان</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Tons_qty)</dd>

        <dt class="col-sm-2">تكلفة الطن</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.price)</dd>

        <dt class="col-sm-2">التاريخ</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Date)</dd>

        <dt class="col-sm-2">الإجمالي</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.total)</dd>
    </dl>

    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary ml-2">رجوع إلى القائمة</a>
    </form>
</div>
</div>