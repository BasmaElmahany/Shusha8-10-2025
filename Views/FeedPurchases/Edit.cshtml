@model Shusha_project_BackUp.Data.FeedPurchases

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">تعديل البيانات</h1>

<div class="row justify-content-center" style="direction: rtl;">
    <div class="col-md-6">
        <form asp-action="Edit" class="bg-light p-4 rounded shadow-sm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Tons_qty" class="form-label fw-bold">كمية بالأطنان</label>
                <input asp-for="Tons_qty" class="form-control text-end" />
                <span asp-validation-for="Tons_qty" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="price" class="form-label fw-bold">تكلفة الطن</label>
                <input asp-for="price" class="form-control text-end" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Date" class="form-label fw-bold">التاريخ</label>
                <input asp-for="Date" type="date" class="form-control text-end" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="total" class="form-label fw-bold">الإجمالي</label>
                <input asp-for="total" class="form-control text-end" />
                <span asp-validation-for="total" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">رجوع إلى القائمة</a>
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
