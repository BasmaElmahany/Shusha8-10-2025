@model Shusha_project_BackUp.Data.Proceed

@{
    ViewData["Title"] = "تفاصيل";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container text-right" dir="rtl" style="font-family: 'Tahoma', sans-serif;">
    <h1 class="text-primary mb-4">تفاصيل الطلب</h1>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">بيانات المعاملة</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 font-weight-bold text-dark">
                   اسم المركز
                </dt>
                <dd class="col-sm-8 text-secondary">
                    @Html.DisplayFor(model => model.center.centerName)
                </dd>
                <dt class="col-sm-4 font-weight-bold text-dark">
                   القيمة المتحصلة
                </dt>
                <dd class="col-sm-8 text-secondary">
                    @Html.DisplayFor(model => model.amount)
                </dd>
                <dt class="col-sm-4 font-weight-bold text-dark">
                    القيمة المتبقية
                </dt>
                <dd class="col-sm-8 text-secondary">
                    @Html.DisplayFor(model => model.rest_amount)
                </dd>
                <dt class="col-sm-4 font-weight-bold text-dark">
                   التاريخ
                </dt>
                <dd class="col-sm-8 text-secondary">
                    @Html.DisplayFor(model => model.Date)
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light d-flex justify-content-end">
            <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-warning btn-sm mx-2">تعديل</a> |
            <a asp-action="Index" class="btn btn-secondary btn-sm mx-2">الرجوع للقائمة</a>
        </div>
    </div>
</div>
