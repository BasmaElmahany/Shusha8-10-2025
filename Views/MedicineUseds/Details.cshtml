@model Shusha_project_BackUp.Data.MedicineUsed

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div dir="rtl">
<h1>التفاصيل</h1>

<div>
    <h4>تفاصيل الدواء المستخدم</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            اسم الدواء
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
          الغرض
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.purpose)
        </dd>
        <dt class = "col-sm-2">
            الكمية المستخدمة
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.quantityUsed)
        </dd>
        <dt class = "col-sm-2">
            التاريخ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
           وصف الدواء
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Medicine.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id">تعديل</a> |
    <a asp-action="Index">العودة الى القائمة</a>
</div>
</div>
