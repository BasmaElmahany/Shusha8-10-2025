@model IEnumerable<Shusha_project_BackUp.Data.Medicine_Pruchase>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Include DataTables CSS (keep it inside head) -->
<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />
</head>

<div dir="rtl">
    <h1 class="mb-4">قائمة الادوية التي تم شراؤها</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">انشاء جديد</a>
    </p>

    <!-- Table -->
    <div class="table-responsive">
        <table id="medicineTable" class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>الكمية</th>
                    <th>اسم الدواء</th>
                    <th>اسم المورد</th>
                    <th>التاريخ</th>
                    <th>وصف الدواء</th>
                    <th>الاجمالي</th>
                    <th class="text-center">اجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.MedicineName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Supplier)</td>
                        <td>@Html.DisplayFor(modelItem => item.PurchaseDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Medicine.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Total)</td>

                        <td class="text-center">
                            @if (User.IsInRole("Admin")){
                                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">تعديل</a>
                            }
                            |
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info btn-sm">تفاصيل</a> |
                            @if (User.IsInRole("Admin")){
                                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">حذف</a>
                            }
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Move JS code to just before closing body tag -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#medicineTable').DataTable({
                "paging": true,          // Enable pagination
                "ordering": true,        // Enable column sorting
                "info": true,            // Enable info display
                "searching": true,       // Enable search functionality
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.12.1/i18n/ar.json" // Arabic translation
                }
            });
        });
    </script>
}

