@model Shusha_project_BackUp.Data.Medicine_Pruchase

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div dir="rtl">
<h1 class="mb-4">حذف فاتورة الشراء الادوية</h1>

<h3>هل انت متأكد من الحذف؟</h3>

<div>
    <h4>التفاصيل</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            الكمية
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            اسم الدواء
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicineName)
        </dd>
        <dt class="col-sm-2">
            تاريخ الشراء
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>
        <dt class="col-sm-2">
           وصف الدواء
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicine.Description)
        </dd>
        <dt class="col-sm-2">
           الاجمالي
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger btn-sm">حذف</button>
        <a asp-action="Index" class="btn btn-secondary btn-sm">العودة الى القائمة </a>
    </form>
</div>
</div>