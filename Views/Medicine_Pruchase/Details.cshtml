@model Shusha_project_BackUp.Data.Medicine_Pruchase

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div dir="rtl">
<h1 class="mb-4">Medicine Purchase Details</h1>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           الكمية
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
           اسم الدواء
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicineName)
        </dd>
        <dt class="col-sm-2">
            تاريخ الشراء
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>
        <dt class="col-sm-2">
            وصف الدواء
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medicine.Description)
        </dd>
        <dt class="col-sm-2">
           قيمة الشراء
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-warning btn-sm">تعديل</a> |
    <a asp-action="Index" class="btn btn-secondary btn-sm">العودة الي القائمة </a>
</div>
</div>