@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject Microsoft.AspNetCore.Mvc.Rendering.IHtmlHelper<dynamic> Html
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] مشروع دواجن شوشة</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <!-- Bootstrap CSS with RTL support -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-rtl/dist/bootstrap-rtl.min.css" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <!-- Custom Stylesheets -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shusha_project_BackUp.styles.css" asp-append-version="true" />

    <style>
        html {
            scroll-behavior: smooth;
        }

        body {
            direction: rtl;
            text-align: right;
            overflow-x: hidden;
            font-family: 'Arial', sans-serif;
            background: #f8f9fa;
        }

        #sidebar {
            height: 100vh; /* Full viewport height */
            width: 250px;
            background: #3f87a6;
            color: white;
            transition: transform 0.3s ease;
            padding-top: 20px;
            overflow-y: auto; /* Makes the sidebar scrollable */
            overflow-x: hidden; /* Prevents horizontal scrolling */
            scrollbar-width: thin; /* Makes the scrollbar slimmer in supported browsers */
        }

            #sidebar::-webkit-scrollbar {
                width: 8px; /* Slim scrollbar width for WebKit browsers */
            }

            #sidebar::-webkit-scrollbar-thumb {
                background-color: rgba(255, 255, 255, 0.5); /* Light thumb for scrollbar */
                border-radius: 4px;
            }

            #sidebar.collapsed {
                transform: translateX(100%);
            }

        #main-content {
            margin-right: 250px;
            transition: margin-right 0.3s ease;
        }

            #main-content.expanded {
                margin-right: 0;
            }

        #sidebar .sidebar-header {
            font-size: 1.5rem;
            font-weight: bold;
            text-align: center;
            padding: 10px;
            border-bottom: 1px solid #ddd;
            background: #3f87a6;
        }

        #sidebar .nav-item {
            margin: 5px 0;
        }

        #sidebar .nav-link {
            display: flex;
            align-items: center;
            padding: 10px 20px;
            font-size: 1rem;
            color: black;
            border-radius: 5px;
            transition: background 0.3s ease;
        }

            #sidebar .nav-link:hover {
                background: rgba(255, 255, 255, 0.2);
            }

            #sidebar .nav-link i {
                margin-left: 10px;
            }

        .navbar {
            background: linear-gradient(0.25turn, #f69d3c, #ebf8e1, #3f87a6);
            color: white;
        }

            .navbar .navbar-brand {
                color: black;
                font-size: 1.25rem;
            }

            .navbar .btn {
                background: white;
                color: #3f87a6;
                font-weight: bold;
            }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .footer {
            background: #3f87a6;
            color: white;
            text-align: center;
            padding: 10px 0;
        }
        /* Style for scrollable render section */
        .render-section-container {
            position: relative;
            max-height: calc(100vh - 200px); /* Adjust height based on your header and footer */
            overflow-y: auto;
            overflow-x: hidden; /* Optional: Avoid horizontal scrolling */
        }

            .render-section-container::-webkit-scrollbar {
                width: 8px; /* Slim scrollbar width for WebKit browsers */
            }

            .render-section-container::-webkit-scrollbar-thumb {
                background-color: rgba(63, 135, 166, 0.5); /* Custom scrollbar thumb color */
                border-radius: 4px; /* Rounded scrollbar thumb */
            }

        .nav-link.active {
            background: rgba(255, 255, 255, 0.4);
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div id="sidebar" class="position-fixed">
        <div class="sidebar-header">
            لوحة التحكم
        </div>
        <ul class="nav flex-column">
             @if (User.IsInRole("Admin") || User.IsInRole("LocalAdmin")) {
                <li class="nav-item">
                    <a class="nav-link text-white @(currentController == "Home" ? "active" : "")" href="@Url.Action("Index", "Home")">
                        <i class="icon fas fa-chart-line"></i> الرئيسية
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(currentController == "Chart" ? "active" : "")" href="@Url.Action("Index", "Chart")">
                        <i class="icon fas fa-chart-pie"></i> رسوم بيانية واحصائيات
                    </a>
                </li>
             }
            @if (User.IsInRole("Admin") || User.IsInRole("LocalAdmin") || User.IsInRole("Lohman") || User.IsInRole("Bayad A") || User.IsInRole("Bayad B") || User.IsInRole("Magary"))
            {

                <li class="nav-item">
                    <a class="nav-link text-white @(currentController == "Branches" ? "active" : "")" href="@Url.Action("Index", "Branches")">
                        <i class="icon fas fa-city"></i> المشروعات
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(currentController == "Wards" ? "active" : "")" href="@Url.Action("Index", "Wards")">
                        <i class="icon fas fa-warehouse"></i> العنابر
                    </a>
                </li>
            
                <li class="nav-item">
                    <a class="nav-link text-white @(currentController == "DailySales" ? "active" : "")" href="@Url.Action("Index", "DailySales")">
                        <i class="icon fas fa-dollar-sign"></i> سجلات المبيعات
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(currentController == "WardsStocks" ? "active" : "")" href="@Url.Action("Index", "WardsStocks")">
                        <i class="icon fas fa-egg"></i> مخزون العنبر
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(currentController == "Feeds_distribution" ? "active" : "")" href="@Url.Action("Index", "Feeds_distribution")">
                        <i class="icon fas fa-leaf"></i> سجلات الاستهلاك اليومي العلف
                    </a>
                </li>
            }
            @if (User.IsInRole("Admin") || User.IsInRole("LocalAdmin") || User.IsInRole("Lohman") || User.IsInRole("Bayad A") || User.IsInRole("Bayad B") || User.IsInRole("Magary") || User.IsInRole("Accountant"))
            {
                <li class="nav-item">
                    <a class="nav-link text-white @(currentController == "Daily_Production" ? "active" : "")" href="@Url.Action("Index", "Daily_Production")">
                        <i class="icon fas fa-industry"></i> سجلات الانتاج اليومي
                    </a>
                </li>
            }
            @{
                var proceedsControllers = new List<string> { "Request_Proceeds", "Proceeds", "TraderSales", "Daily_Distribution" };
            }

            @if (User.IsInRole("Admin") || User.IsInRole("LocalAdmin") || User.IsInRole("proceeds") || User.IsInRole("Accountant"))
            {
               
                  <li class="nav-item dropdown">
                         <a class="nav-link text-white dropdown-toggle @(proceedsControllers.Contains(currentController) ? "active" : "")" href="#" id="proceedsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="icon fas fa-hand-holding-usd"></i>  المديونية والمبيعات 
                          </a>
                   <ul class="dropdown-menu" aria-labelledby="proceedsDropdown">
                 <li>
                        
                     <a class="dropdown-item @(currentController == "Request_Proceeds" ? "active" : "")" href="@Url.Action("Index", "Request_Proceeds")">
                    <i class="icon fas fa-hand-holding-usd"></i> المديونية المراكز
                   </a>
                          </li>
                        <li><a class="dropdown-item @(currentController == "Daily_Distribution" ? "active" : "")" href="@Url.Action("Index", "Daily_Distribution")"><i class="icon fas fa-truck"></i> توزيعات المراكز</a></li>
                        <li><a class="dropdown-item @(currentController == "Prices" ? "active" : "")" href="@Url.Action("Index", "Prices")"><i class="icon fas fa-tag"></i> الاسعار اليومية للبيض</a></li>
                  <li>

                   <a class="dropdown-item @(currentController == "Proceeds" ? "active" : "")" href="@Url.Action("Index", "Proceeds")">
                        <i class="icon fas fa-receipt"></i> المسدد
                    </a>
                  </li>
                     <li>
            <a class="dropdown-item @(currentController == "TraderSales" ? "active" : "")" href="@Url.Action("Index", "TraderSales")">
                <i class="icon fas fa-receipt"></i> مبيعات المزرعة للتجار
            </a>

                            <a class="dropdown-item @(currentController == "HerdSales" ? "active" : "")" href="@Url.Action("Index", "HerdSales")">
                                <i class="fas fa-dove text-primary"></i> مبيعات القطيع
                            </a>
        </li>
    </ul>
</li>



            }

            @if (User.IsInRole("Admin") || User.IsInRole("LocalAdmin") || User.IsInRole("Accountant"))
            {
                var financeControllers = new List<string> {"Prices", "Employees", "Contracts", "Eelectricity_Invoice", "Water_Invoices", "Solar_Invoices", "Medicine" };

                <li class="nav-item dropdown">
                    <a class="nav-link text-white dropdown-toggle @(financeControllers.Contains(currentController) ? "active" : "")" href="#" id="financeDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="icon fas fa-chart-line"></i> السجلات المالية
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="financeDropdown">
                        
                       
                        <li><a class="dropdown-item @(currentController == "Employees" ? "active" : "")" href="@Url.Action("Index", "Employees")"><i class="icon fas fa-user-tie"></i> سجلات الموظفين</a></li>
                        <li><a class="dropdown-item @(currentController == "Contracts" ? "active" : "")" href="@Url.Action("Index", "Contracts")"><i class="icon fas fa-file-signature"></i> سجلات عقود الموظفين</a></li>
                        <li><a class="dropdown-item @(currentController == "Eelectricity_Invoice" ? "active" : "")" href="@Url.Action("Index", "Eelectricity_Invoice")"><i class="icon fas fa-bolt"></i> سجلات فواتير الكهرباء</a></li>
                        <li><a class="dropdown-item @(currentController == "Water_Invoices" ? "active" : "")" href="@Url.Action("Index", "Water_Invoices")"><i class="icon fas fa-bolt"></i> سجلات فواتير المياه</a></li>
                        <li><a class="dropdown-item @(currentController == "Solar_Invoices" ? "active" : "")" href="@Url.Action("Index", "Solar_Invoices")"><i class="icon fas fa-solar-panel"></i> سجلات فواتير السولار</a></li>
                        <li><a class="dropdown-item @(currentController == "Medicine" ? "active" : "")" href="@Url.Action("Index", "Medicine")"><i class="icon fas fa-tablets"></i> سجلات الادوية</a></li>
                    </ul>
                </li>
            }

            @if (User.IsInRole("Admin") || User.IsInRole("LocalAdmin"))
            {
                var medicineControllers = new List<string> { "MedicineUseds", "Medicine_Pruchase", "Admin" };

                <li class="nav-item dropdown">
                    <a class="nav-link text-white dropdown-toggle @(medicineControllers.Contains(currentController) ? "active" : "")" href="#" id="medicineDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="icon fas fa-pills"></i> ادارة الادوية والمستخدمين
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="medicineDropdown">
                        <li><a class="dropdown-item @(currentController == "MedicineUseds" ? "active" : "")" href="@Url.Action("Index", "MedicineUseds")"><i class="icon fas fa-prescription"></i> سجلات استهلاك الادوية</a></li>
                        <li><a class="dropdown-item @(currentController == "Medicine_Pruchase" ? "active" : "")" href="@Url.Action("Index", "Medicine_Pruchase")"><i class="icon fas fa-cart-plus"></i> سجلات شراء الادوية</a></li>
                        <li><a class="dropdown-item @(currentController == "Admin" ? "active" : "")" href="@Url.Action("Index", "Admin")"><i class="icon fas fa-user-cog"></i> المستخدمين</a></li>
                    </ul>
                </li>
            }

        </ul>
    </div>

    <div id="main-content">
        <header>
            <nav class="navbar navbar-expand-sm navbar-dark">
                <div class="container-fluid" dir="rtl">
                    <!-- Sidebar Toggle Button -->
                    <button class="btn me-3" id="toggle-sidebar">☰</button>

                    <!-- Navbar Brand -->
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">مشروع دواجن شوشة</a>

                    <!-- Navbar Items -->
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav ms-auto">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <!-- User Dropdown Menu -->
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-circle"></i> @User.Identity?.Name
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <li>
                                                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                                                    <i class="bi bi-gear"></i> اعدادات الحساب
                                                </a>
                                            </li>
                                        }

                                        <li>
                                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "LandingPage", new { area = "" })" class="d-inline">
                                                <button type="submit" class="dropdown-item">
                                                    <i class="bi bi-box-arrow-right"></i> تسجيل الخروج

                                                </button>
                                            </form>


                                        </li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>


        <main class="container-fluid mt-4 render-section-container">
            <div class="scrollable-section">
                @RenderBody()
          
            </div>
        </main>


        <footer class="footer">
            <p>&copy; 2025 مشروع دواجن شوشة. جميع الحقوق محفوظة.</p>
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById("toggle-sidebar").addEventListener("click", function () {
            document.getElementById("sidebar").classList.toggle("collapsed");
            document.getElementById("main-content").classList.toggle("expanded");
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
