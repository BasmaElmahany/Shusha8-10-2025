@model IEnumerable<Shusha_project_BackUp.Data.FeedInventory>

@{
    ViewData["Title"] = "المخزون";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- DataTables and RTL Bootstrap styles -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" />
<style>
    body {
        direction: rtl;
    }

    .table {
        text-align: right;
        direction: rtl;
    }
</style>
<h1 class="text-center my-4">إدارة المخزون</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-success">إضافة جديد</a>
</p>

<table id="inventoryTable" class="table table-striped table-bordered text-center">
    <thead class="table-dark">
        <tr>
            <th>الكمية</th>
            <th>التكلفة للطن الواحد</th>
            <th>تاريخ الانتاج</th>
            <th>المجموع</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Tons_qty)</td>
                <td>@Html.DisplayFor(modelItem => item.ton_cost)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@Html.DisplayFor(modelItem => item.total)</td>
                <td>
                    @if (User.IsInRole("Admin")){
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">تعديل</a>
                    }
                 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">تفاصيل</a>
                    @if (User.IsInRole("Admin")){
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                    }
                   
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <!-- DataTables and Bootstrap scripts -->
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.13.5/i18n/ar.json"></script>

    <script>
        $(document).ready(function () {
            $('#inventoryTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.5/i18n/ar.json"
                },
                "order": [[2, "desc"]], // Order by Date column (descending)
                "autoWidth": false,
                "responsive": true
            });
        });
    </script>
}

