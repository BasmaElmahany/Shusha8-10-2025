@model Shusha_project_BackUp.Data.FeedInventory

@{
    ViewData["Title"] = "إضافة جديدة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">إضافة بيانات جديدة</h1>

<div class="row justify-content-center" style="direction: rtl;">
    <div class="col-md-6">
        <form asp-action="Create" class="bg-light p-4 rounded shadow-sm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Tons_qty" class="form-label fw-bold">كمية بالأطنان</label>
                <input asp-for="Tons_qty" class="form-control text-end" />
                <span asp-validation-for="Tons_qty" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ton_cost" class="form-label fw-bold">تكلفة الطن</label>
                <input asp-for="ton_cost" class="form-control text-end" />
                <span asp-validation-for="ton_cost" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">رجوع إلى القائمة</a>
                <input type="submit" value="إضافة" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
