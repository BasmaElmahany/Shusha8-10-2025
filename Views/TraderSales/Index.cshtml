@model IEnumerable<Shusha_project_BackUp.Data.TraderSales>

@{
    ViewData["Title"] = "سجل المبيعات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">سجل مبيعات المزرعة للتجار</h1>

<div class="d-flex justify-content-end">
    <a asp-action="ExportToExcel" class="btn btn-success">
        <i class="bi bi-file-earmark-excel"></i> تصدير إلى إكسل
    </a>
</div>


<p class="text-end">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> إضافة سجل جديد
    </a>
</p>
<div class="container mt-4">
    <div class="row text-center">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">إجمالي البيض الأبيض</h5>
                    <h3 class="text-primary fw-bold">@ViewBag.Total_WhEgg</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">إجمالي البيض البني</h5>
                    <h3 class="text-primary fw-bold">@ViewBag.Total_BrEgg</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">إجمالي البيض</h5>
                    <h3 class="text-primary fw-bold">@ViewBag.Total</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center mt-3">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">إجمالي مبيعات البيض الأبيض</h5>
                    <h3 class="text-success fw-bold">@ViewBag.total_Wh_sales</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">إجمالي مبيعات البيض البني</h5>
                    <h3 class="text-success fw-bold">@ViewBag.total_br_sales</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">إجمالي المبيعات</h5>
                    <h3 class="text-success fw-bold">@ViewBag.Total_sales</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<table id="traderSalesTable" class="table table-striped table-bordered text-center" style="width:100%">
    <thead class="table-dark">
        <tr>
            <th>عدد البيض الأبيض بالكرتونة</th>
            <th>سعر البيض الأبيض بالكرتونة</th>
            <th>عدد البيض البني بالكرتونة</th>
            <th>سعر البيض البني بالكرتونة</th>
            <th>عدد البيض الكسر بالكرتونة</th>
            <th>سعر البيض الكسر بالكرتونة</th>
            <th>عدد البيض مزدوج الصفارة بالكرتونة</th>
            <th>سعر البيض مزدوج الصفارة بالكرتونة</th>
            <th>اجمالي المطلوب</th>
            <th>هل تم السداد؟</th>
            <th>التاريخ</th>
            <th>اسم التاجر</th>
            
            <th>إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NoOfWhiteEggs</td>
                <td>@item.WhiteEggPrice.ToString("C")</td>
                <td>@item.NoOfBrownEggs</td>
                <td>@item.BrownEggPrice.ToString("C")</td>
                <td>@item.NoOfBrokenEggs</td>
                <td>@item.BrokenEggPrice.ToString("C")</td>
                <td>@item.NoOfDoubleEggs</td>
                <td>@item.DoubleEggPrice.ToString("C")</td>
                <td>@item.RequestProceed</td>
                <td>@(item.IsPaid ? "نعم" : "لا")</td>
                <td>@item.date.ToShortDateString()</td>
                <td>@item.name_ofTrader</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">تعديل</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">تفاصيل</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.11.5/i18n/Arabic.json"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script>
            $(document).ready(function() {
                    $('#traderSalesTable').DataTable({
                    "language": {
                        "url": "https://cdn.datatables.net/plug-ins/1.13.1/i18n/Arabic.json",
                        "emptyTable": "لا توجد بيانات لعرضها",
                        "paginate": {
                            "first": "الأول",
                            "last": "الآخر",
                            "next": "التالي",
                            "previous": "السابق"
                        },
                        "info": "عرض _START_ إلى _END_ من _TOTAL_ سجل",
                        "infoEmpty": "لا توجد بيانات لعرضها",
                        "infoFiltered": "(تم تصفيتها من _MAX_ إجمالي العناصر)"
                    },
                    "pagingType": "full_numbers",
                    "responsive": true,
                    "ordering": true
                });
            });

    </script>
}
