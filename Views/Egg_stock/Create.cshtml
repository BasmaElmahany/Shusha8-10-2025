@model Shusha_project_BackUp.Data.Egg_stock

@{
    ViewData["Title"] = "إضافة مخزون جديد";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        direction: rtl;
        text-align: right;
    }

    label {
        text-align: right;
    }
</style>

<h1 class="text-center mb-4">إضافة مخزون جديد</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="plates_whiteEggs" class="form-label">عدد أطباق البيض الأبيض</label>
                <input asp-for="plates_whiteEggs" class="form-control" />
                <span asp-validation-for="plates_whiteEggs" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="plates_BrownEggs" class="form-label">عدد أطباق البيض البني</label>
                <input asp-for="plates_BrownEggs" class="form-control" />
                <span asp-validation-for="plates_BrownEggs" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="brokenPlates" class="form-label">عدد أطباق البيض الكسر</label>
                <input asp-for="brokenPlates" class="form-control" />
                <span asp-validation-for="brokenPlates" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="doubleEggs" class="form-label">عدد أطباق البيض مزدوج الصفارة</label>
                <input asp-for="doubleEggs" class="form-control" />
                <span asp-validation-for="doubleEggs" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="total" class="form-label">المجموع الكلي للأطباق</label>
                <input asp-for="total" class="form-control" />
                <span asp-validation-for="total" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">العودة إلى القائمة</a>
                <button type="submit" class="btn btn-primary">إضافة</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
