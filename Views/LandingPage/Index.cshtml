    <!-- Features Section -->
    <section class="features-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">مميزات النظام</h2>
                <p class="section-subtitle">حلول شاملة لإدارة مزرعتك بكفاءة واحترافية</p>
            </div>

            <div class="row g-4">
