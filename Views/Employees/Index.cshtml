@model IEnumerable<Shusha_project_BackUp.Employees>

@{
    ViewData["Title"] = "الموظفين";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Include DataTables and FontAwesome -->
<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container my-5" dir="rtl">
    <h1 class="text-center text-primary mb-4">الموظفين</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">قائمة الموظفين</h5>
        </div>

        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-person-plus-fill"></i> إضافة موظف جديد
                </a>
            </div>

            <!-- Table -->
            <div class="table-responsive">
                <table id="employeeTable" class="table table-bordered table-hover table-striped align-middle text-right">
                    <thead class="table-dark">
                        <tr>
                            <th>اسم الموظف</th>
                            <th>الرقم القومي</th>
                            <th>رقم الهاتف</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">لا توجد سجلات متاحة</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.emp_name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NID)</td>
                                    <td>@Html.DisplayFor(modelItem => item.phoneNumber)</td>
                                    <td>

                                        <div class="d-flex gap-2 justify-content-center">
                                            @if (User.IsInRole("Admin")){
                                                <a asp-action="Edit" asp-route-id="@item.emp_id" class="btn btn-warning btn-sm" data-toggle="tooltip" title="تعديل">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                            }
                                           
                                            <a asp-action="Details" asp-route-id="@item.emp_id" class="btn btn-info btn-sm text-white" data-toggle="tooltip" title="تفاصيل">
                                                <i class="bi bi-eye-fill"></i>
                                            </a>
                                            @if (User.IsInRole("Admin")){
                                                <a asp-action="Delete" asp-route-id="@item.emp_id" class="btn btn-danger btn-sm" data-toggle="tooltip" title="حذف">
                                                    <i class="bi bi-trash-fill"></i>
                                                </a>
                                            }
                                           
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-secondary">الرجوع إلى لوحة التحكم</a>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize DataTables with Arabic and RTL support
            $('#employeeTable').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json"
                },
                "dom": '<"top"f>rt<"bottom"ilp>',
                "scrollX": true,
                "autoWidth": false,
                "responsive": true
            });

            // Enable Bootstrap tooltips
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
