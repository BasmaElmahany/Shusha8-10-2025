@model Shusha_project_BackUp.Data.Request_Proceeds

<h4 class="text-center mb-4">إضافة طلبات العائدات</h4>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create">
                <!-- Display validation errors -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Form fields -->
                <div class="form-group">
                    <label asp-for="centerID" class="control-label">اختار المركز</label>
                    <select asp-for="centerID" class="form-control" asp-items="ViewBag.centerID"></select>
                </div>

                <div class="form-group">
                    <label asp-for="requested_proceeds" class="control-label">المبلغ المطلوب</label>
                    <input asp-for="requested_proceeds" class="form-control" type="number" step="any" />
                    <span asp-validation-for="requested_proceeds" class="text-danger"></span>
                </div>

                <!-- Submit button -->
                <div class="form-group text-center">
                    <input type="submit" value="إضافة" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <!-- Back to List -->
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-sm">الرجوع إلى القائمة</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
