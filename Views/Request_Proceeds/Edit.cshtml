@model Shusha_project_BackUp.Data.Request_Proceeds

@{
    ViewData["Title"] = "تعديل";
}

<div class="container text-right" dir="rtl" style="font-family: 'Tahoma', sans-serif;">
    <h1 class="text-primary mb-4">تعديل طلب</h1>
    
    <h4 class="text-secondary mb-3">بيانات العائد المطلوب</h4>
    <hr />
    
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">تعديل البيانات</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <input type="hidden" asp-for="Id" />
                
                <div class="form-group">
                    <label asp-for="centerID" class="control-label font-weight-bold text-dark"></label>
                    <select asp-for="centerID" class="form-control">
                        <option value="">اختر المركز</option>
                        @foreach (var item in ViewBag.centerID as SelectList)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="centerID" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="requested_proceeds" class="control-label font-weight-bold text-dark"></label>
                    <input asp-for="requested_proceeds" class="form-control" placeholder="أدخل العائد المطلوب" />
                    <span asp-validation-for="requested_proceeds" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="حفظ" class="btn btn-success btn-block" />
                </div>
            </form>
        </div>
        <div class="card-footer bg-light d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-secondary btn-sm">الرجوع للقائمة</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
