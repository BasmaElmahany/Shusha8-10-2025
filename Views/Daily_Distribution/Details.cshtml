@model Shusha_project_BackUp.Daily_Distribution

@{
    ViewData["Title"] = "تفاصيل التوزيع اليومي";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div dir="rtl" class="container mt-5">
    <h1 class="text-center">تفاصيل التوزيع اليومي</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">تفاصيل التوزيع</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                   اسم المركز
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Center.centerName)
                </dd>

                <dt class="col-sm-2">
                    التاريخ
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Date)
                </dd>

                <dt class="col-sm-2">
                    عدد اطباق البيض الابيض
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.WhEgg_platesnumber)
                </dd>

                <dt class="col-sm-2">
                   عدد اطباق البيض مزدوج الصفارة 
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.doubleEgg_platesnumber)
                </dd>

                <dt class="col-sm-2">
                    عدد اطباق البيض البني
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.brEgg_platesnumber)
                </dd>

                <dt class="col-sm-2">
                   عدد اطباق البيض الكسر
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BrokenEgg_platesnumber)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.dis_id" class="btn btn-warning">تعديل</a> |
        <a asp-action="Index" class="btn btn-primary">الرجوع إلى القائمة</a>
    </div>
</div>
