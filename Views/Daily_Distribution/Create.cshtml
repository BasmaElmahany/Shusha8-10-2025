@model Shusha_project_BackUp.Daily_Distribution

@{
    ViewData["Title"] = "إنشاء توزيع يومي";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div dir="rtl" class="container mt-5">
    <h1 class="text-center">إنشاء توزيع يومي جديد</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">تفاصيل التوزيع اليومي</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="centerId" class="control-label">المركز</label>
                    <select asp-for="centerId" class="form-control" asp-items="ViewBag.centerId"></select>
                    <span asp-validation-for="centerId" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="WhEgg_platesnumber" class="control-label">عدد اطباق البيض الأبيض</label>
                    <input asp-for="WhEgg_platesnumber" class="form-control" />
                    <span asp-validation-for="WhEgg_platesnumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="doubleEgg_platesnumber" class="control-label">عدد اطباق البيض مزدوج الصفارة</label>
                    <input asp-for="doubleEgg_platesnumber" class="form-control" />
                    <span asp-validation-for="doubleEgg_platesnumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="brEgg_platesnumber" class="control-label">عدد اطباق البيض البني</label>
                    <input asp-for="brEgg_platesnumber" class="form-control" />
                    <span asp-validation-for="brEgg_platesnumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BrokenEgg_platesnumber" class="control-label">عدد اطباق البيض الكسر</label>
                    <input asp-for="BrokenEgg_platesnumber" class="form-control" />
                    <span asp-validation-for="BrokenEgg_platesnumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Date" class="control-label">التاريخ</label>
                    <input asp-for="Date" class="form-control" type="date" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="إنشاء" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-primary">الرجوع إلى القائمة</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
