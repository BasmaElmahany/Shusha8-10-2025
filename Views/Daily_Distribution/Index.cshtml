@model IEnumerable<Shusha_project_BackUp.Daily_Distribution>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">


<div dir="rtl" class="container mt-5">
    <h1 class="text-center">عرض جميع التوزيعات اليومية</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">إنشاء جديد</a>
        <a asp-action="ExportTodayToExcel" class="btn btn-primary">تصدير بيانات اليوم إلى Excel</a>

    </div>
    <form asp-controller="Daily_Distribution" asp-action="ExportToExcel" method="get">
        <label for="startDate">من تاريخ:</label>
        <input type="date" id="startDate" name="startDate" required />

        <label for="endDate">إلى تاريخ:</label>
        <input type="date" id="endDate" name="endDate" required />

        <button type="submit" class="btn btn-success">تصدير Excel</button>
    </form>


    <table id="dataTable" class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>المركز</th>
                <th>التاريخ</th>
                <th>عدد اطباق البيض الأبيض</th>
                <th>عدد اطباق البيض مزدوج الصفارة</th>
                <th>عدد اطباق البيض البني</th>
                <th>عدد اطباق البيض الكسر</th>
                <th>الاجمالي</th>
                <th>تعديل</th>
                <th>تفاصيل</th>
                <th>حذف</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Center.centerName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>@Html.DisplayFor(modelItem => item.WhEgg_platesnumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.doubleEgg_platesnumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.brEgg_platesnumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.BrokenEgg_platesnumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.total)</td>
                    <td>
                        @if (User.IsInRole("Admin")){
                            <a asp-action="Edit" asp-route-id="@item.dis_id" class="btn btn-warning btn-sm">تعديل</a>
                        }
                       
                      
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.dis_id" class="btn btn-info btn-sm">تفاصيل</a>
                    </td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                       <a asp-action="Delete" asp-route-id="@item.dis_id" class="btn btn-danger btn-sm">حذف</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json"></script>
    <script>
            $(document).ready(function () {
            $('#dataTable').DataTable({
                language: {
                    url: "https://cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json"
                },
                order: [[1, 'desc']] // Sort by the 2nd column (index 1 = التاريخ)
            });
        });
    </script>
}
