@model IEnumerable<Shusha_project_BackUp.Data.Prices>

@{
    ViewData["Title"] = "Index";
}

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />





<h1 class="text-center my-4">قائمة الأسعار</h1>

<p class="text-center">
    <a class="btn btn-primary" asp-action="Create">إنشاء جديد</a>
</p>

<!-- Table -->
<table id="pricesTable" class="table table-striped table-bordered text-right" dir="rtl">
    <thead>
        <tr>
            <th>سعر البيض الابيض</th>
            <th>سعر البيض البني</th>
            <th>سعر البيض الكسر</th>
            <th>سعر البيض مزدوج الصفارة</th>
            <th>التاريخ</th>
            <th>العمليات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.white_Egg_Price)</td>
                <td>@Html.DisplayFor(modelItem => item.brown_Egg_Price)</td>
                <td>@Html.DisplayFor(modelItem => item.broken_Egg_Price)</td>
                <td>@Html.DisplayFor(modelItem => item.double_Egg_Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>
                    @if (User.IsInRole("Admin")){
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.id">تعديل</a>
                    }
                   
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.id">تفاصيل</a>
                    @if (User.IsInRole("Admin")){
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.id">حذف</a>
                    }
                    
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <!-- jQuery and DataTables JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <!-- DataTables Initialization Script -->
    <script>
        $(document).ready(function () {
            $('#pricesTable').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.12.1/i18n/Arabic.json"
                },
                "paging": true, // Enable pagination
                "searching": true, // Enable search
                "lengthChange": false, // Disable the "entries per page" option
                "info": false, // Disable table info text (like "Showing 1 to 10 of 50 entries")
                "autoWidth": false, // Disable automatic column width calculation
            });
        });
    </script>

}
