@model IEnumerable<Shusha_project_BackUp.Feeds_distribution>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
<style>
    body {
        direction: rtl; /* Set RTL for the entire page */
    }

    table {
        text-align: center;
    }
</style>


<h1 class="text-center">الاستهلاك اليومي للعلف</h1>

<p class="mb-3">
    <a asp-action="Create" class="btn btn-primary">انشاء الجديد</a>
</p>

<table id="feedsTable" class="table table-striped table-bordered text-center" style="width:100%">
    <thead class="thead-dark">
        <tr>
            <th>الكمية المستخدمة</th>
            <th>العنبر</th>
            <th>التاريخ</th>
            <th>اجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.ward.WardName)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.dis_Id" class="btn btn-sm btn-warning">تعديل</a>
                    <a asp-action="Details" asp-route-id="@item.dis_Id" class="btn btn-sm btn-info">تفاصيل</a>
                    <a asp-action="Delete" asp-route-id="@item.dis_Id" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#feedsTable').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json" // Arabic translation
                },
                paging: true,
                searching: true,
                ordering: true
            });
        });
    </script>

}