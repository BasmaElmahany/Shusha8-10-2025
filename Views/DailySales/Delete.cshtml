@model Shusha_project_BackUp.Data.DailySales

@{
    ViewData["Title"] = "حذف سجل المبيعات";
}

<!-- Include Bootstrap CSS for styling -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css">

<style>
    body {
        direction: rtl;
        text-align: right;
    }

    h1, h3 {
        text-align: center;
    }

    .form-group {
        margin-top: 20px;
    }

    .btn-danger {
        margin-right: 10px;
    }

    dl.row dt, dl.row dd {
        text-align: right;
    }

    .back-link {
        margin-top: 20px;
        display: inline-block;
    }
</style>

<div class="container mt-5">
    <h1>حذف سجل المبيعات</h1>

    <h3>هل أنت متأكد أنك تريد حذف هذا السجل؟</h3>
    <div>
        <h4>تفاصيل سجل المبيعات</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">العنبر</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ward.WardName)</dd>

            <dt class="col-sm-3">عدد كراتين البيض الأبيض</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.no_of_carton_WhEggs)</dd>

          @*  <dt class="col-sm-3">سعر البيض الأبيض</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Whprice)</dd>*@

            <dt class="col-sm-3">عدد كراتين البيض البني</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.no_of_carton_BrEggs)</dd>

          @*  <dt class="col-sm-3">سعر البيض البني</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Brprice)</dd>*@

            <dt class="col-sm-3">عدد كراتين البيض المكسور</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.no_of_carton_broken)</dd>

             @*   <dt class="col-sm-3">سعر البيض المكسور</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Broprice)</dd>*@

            <dt class="col-sm-3">عدد كراتين البيض مزودج الصفارة</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.double_eggs)</dd>

           @*   <dt class="col-sm-3">سعر البيض مزودج الصفارة</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Doprice)</dd>*@

            <dt class="col-sm-3">التاريخ</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>

           @* <dt class="col-sm-3">الإجمالي</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Total)</dd>*@
        </dl>

        <!-- Delete Confirmation Form -->
        <form asp-action="Delete" class="form-group">
            <input type="hidden" asp-for="dailySales_id" />
            <div class="text-center">
                <input type="submit" value="حذف" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">العودة للقائمة</a>
            </div>
        </form>
    </div>
</div>
