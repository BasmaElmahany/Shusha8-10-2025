@model Shusha_project_BackUp.Solar_Invoices

@{
    ViewData["Title"] = "حذف الفاتورة الشمسية";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Ensure RTL direction for Arabic layout -->
<div dir="rtl" class="container mt-5">
    
    <h3 class="text-center mb-4">هل أنت متأكد أنك تريد حذف هذه الفاتورة؟</h3>
    <hr />

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <dl class="row">
                <dt class="col-sm-3">المبلغ</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.amount)</dd>

                <dt class="col-sm-3">التاريخ</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>
                <dt class="col-sm-2">
                    <i class="fas fa-building"></i> المحطة
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.branch.branch_name)
                </dd>
            </dl>

            <!-- Delete Form -->
            <form asp-action="Delete">
                <input type="hidden" asp-for="invoice_id" />
                <div class="form-group text-center">
                    <input type="submit" value="حذف" class="btn btn-danger btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg">العودة إلى القائمة</a>
                </div>
            </form>
        </div>
    </div>
</div>
