@{
    ViewData["Title"] = "تقرير المبيعات الشامل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --success-gradient: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        --info-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        --warning-gradient: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        --dark-gradient: linear-gradient(135deg, #232526 0%, #414345 100%);
    }

    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        background-attachment: fixed;
        min-height: 100vh;
    }

    .page-header {
        background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.9) 100%);
        backdrop-filter: blur(10px);
        color: #2d3748;
        padding: 3rem 0;
        margin-bottom: 3rem;
        border-radius: 2rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        position: relative;
        overflow: hidden;
        animation: slideDown 0.6s ease-out;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(102, 126, 234, 0.1) 0%, transparent 70%);
            animation: rotate 20s linear infinite;
        }

        .page-header h1 {
            margin: 0;
            font-weight: 800;
            font-size: 3rem;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            position: relative;
            z-index: 1;
        }

        .page-header p {
            margin: 1rem 0 0 0;
            font-size: 1.3rem;
            color: #4a5568;
            font-weight: 500;
            position: relative;
            z-index: 1;
        }

        .page-header .icon-badge {
            display: inline-block;
            width: 80px;
            height: 80px;
            background: var(--primary-gradient);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: white;
            margin-bottom: 1rem;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
            animation: pulse 2s ease-in-out infinite;
        }

    @@keyframes slideDown {
        from

    {
        opacity: 0;
        transform: translateY(-50px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@keyframes rotate {
        from

    {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }

    }

    @@keyframes pulse {
        0%, 100%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    }

    @@keyframes float {
        0%, 100%

    {
        transform: translateY(0px);
    }

    50% {
        transform: translateY(-10px);
    }

    }

    .export-card {
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(20px);
        border-radius: 2rem;
        padding: 3rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        max-width: 1000px;
        margin: 0 auto;
        animation: fadeInUp 0.8s ease-out;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .info-card {
        background: var(--info-gradient);
        color: white;
        padding: 2rem;
        border-radius: 1.5rem;
        margin-bottom: 2.5rem;
        box-shadow: 0 10px 30px rgba(79, 172, 254, 0.3);
        position: relative;
        overflow: hidden;
        animation: fadeInUp 1s ease-out;
    }

        .info-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: rotate 15s linear infinite;
        }

        .info-card h5 {
            margin: 0 0 1.5rem 0;
            font-weight: 700;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            position: relative;
            z-index: 1;
        }

        .info-card ul {
            margin: 0;
            padding-right: 1.5rem;
            position: relative;
            z-index: 1;
        }

        .info-card li {
            margin-bottom: 0.75rem;
            font-size: 1.05rem;
            line-height: 1.6;
        }

            .info-card li strong {
                font-weight: 700;
            }

    .filter-section {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
        padding: 2.5rem;
        border-radius: 1.5rem;
        margin-bottom: 2rem;
        border: 2px solid rgba(102, 126, 234, 0.2);
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }

        .filter-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.6s ease;
        }

        .filter-section:hover::before {
            left: 100%;
        }

        .filter-section:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(102, 126, 234, 0.2);
            border-color: rgba(102, 126, 234, 0.4);
        }

        .filter-section h4 {
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: 700;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 1.4rem;
        }

            .filter-section h4 i {
                background: var(--primary-gradient);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                font-size: 1.6rem;
            }

    .form-label {
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.05rem;
    }

        .form-label i {
            color: #667eea;
            font-size: 1.2rem;
        }

    .form-control, .form-select {
        border-radius: 1rem;
        border: 2px solid #e2e8f0;
        padding: 1rem 1.25rem;
        transition: all 0.3s ease;
        font-size: 1.05rem;
        background: white;
    }

        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }

    .btn-export {
        padding: 1.5rem 3rem;
        font-weight: 700;
        border-radius: 1.5rem;
        transition: all 0.4s ease;
        display: inline-flex;
        align-items: center;
        gap: 1rem;
        font-size: 1.3rem;
        width: 100%;
        justify-content: center;
        background: var(--success-gradient);
        border: none;
        color: white;
        box-shadow: 0 10px 30px rgba(17, 153, 142, 0.3);
        position: relative;
        overflow: hidden;
    }

        .btn-export::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .btn-export:hover::before {
            width: 300px;
            height: 300px;
        }

        .btn-export:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(17, 153, 142, 0.4);
        }

        .btn-export i {
            font-size: 1.8rem;
            position: relative;
            z-index: 1;
        }

        .btn-export span {
            position: relative;
            z-index: 1;
        }

    .option-divider {
        text-align: center;
        margin: 2.5rem 0;
        position: relative;
    }

        .option-divider::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(to right, transparent, #667eea, transparent);
        }

        .option-divider span {
            background: white;
            padding: 0.5rem 1.5rem;
            position: relative;
            z-index: 1;
            color: #667eea;
            font-weight: 700;
            font-size: 1.2rem;
            border-radius: 2rem;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.2);
        }

    .alert-info-custom {
        background: linear-gradient(135deg, rgba(79, 172, 254, 0.1) 0%, rgba(0, 242, 254, 0.1) 100%);
        border: 2px solid rgba(79, 172, 254, 0.3);
        border-radius: 1.5rem;
        padding: 1.5rem;
        text-align: center;
        color: #2d3748;
        font-size: 1.05rem;
        margin-bottom: 2rem;
        animation: fadeInUp 1.4s ease-out;
    }

        .alert-info-custom i {
            color: #4facfe;
            font-size: 1.5rem;
            margin-left: 0.5rem;
        }

    .features-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-top: 2.5rem;
    }

    .feature-badge {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        background: white;
        color: #2d3748;
        padding: 1.25rem 1.5rem;
        border-radius: 1.25rem;
        font-weight: 600;
        font-size: 1.05rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        border: 2px solid transparent;
        animation: fadeInUp 1.6s ease-out;
    }

        .feature-badge:nth-child(1) {
            animation-delay: 0.1s;
        }

        .feature-badge:nth-child(2) {
            animation-delay: 0.2s;
        }

        .feature-badge:nth-child(3) {
            animation-delay: 0.3s;
        }

        .feature-badge:nth-child(4) {
            animation-delay: 0.4s;
        }

        .feature-badge:nth-child(5) {
            animation-delay: 0.5s;
        }

        .feature-badge:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
            border-color: #667eea;
        }

        .feature-badge i {
            font-size: 1.5rem;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

    .stats-preview {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2.5rem;
        animation: fadeInUp 1.2s ease-out;
    }

    .stat-card {
        background: white;
        padding: 1.5rem;
        border-radius: 1.25rem;
        text-align: center;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 2px solid transparent;
        position: relative;
        overflow: hidden;
    }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: var(--primary-gradient);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            border-color: #667eea;
        }

        .stat-card i {
            font-size: 2.5rem;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
        }

        .stat-card h6 {
            color: #718096;
            font-size: 0.95rem;
            margin: 0.5rem 0;
            font-weight: 600;
        }

        .stat-card .stat-value {
            font-size: 1.8rem;
            font-weight: 700;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

    @@media (max-width: 768px) {
        .page-header h1

    {
        font-size: 2rem;
    }

    .page-header p {
        font-size: 1rem;
    }

    .export-card {
        padding: 2rem;
    }

    .btn-export {
        padding: 1.25rem 2rem;
        font-size: 1.1rem;
    }

    .filter-section {
        padding: 1.5rem;
    }

    .features-container {
        grid-template-columns: 1fr;
    }

    }

    .floating-shapes {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: -1;
        overflow: hidden;
    }

    .shape {
        position: absolute;
        opacity: 0.1;
        animation: float 20s ease-in-out infinite;
    }

        .shape:nth-child(1) {
            top: 10%;
            left: 10%;
            width: 100px;
            height: 100px;
            background: var(--primary-gradient);
            border-radius: 50%;
            animation-delay: 0s;
        }

        .shape:nth-child(2) {
            top: 60%;
            right: 10%;
            width: 150px;
            height: 150px;
            background: var(--success-gradient);
            border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
            animation-delay: 2s;
        }

        .shape:nth-child(3) {
            bottom: 10%;
            left: 20%;
            width: 120px;
            height: 120px;
            background: var(--info-gradient);
            border-radius: 63% 37% 54% 46% / 55% 48% 52% 45%;
            animation-delay: 4s;
        }
</style>

<div class="floating-shapes">
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
</div>

<div class="page-header text-center">
    <div class="icon-badge">
        <i class="bi bi-file-earmark-spreadsheet-fill"></i>
    </div>
    <h1>
        تقرير المبيعات الشامل
    </h1>
    <p>تصدير بيانات المبيعات الكاملة بتصميم احترافي</p>
</div>

<div class="export-card">
    <!-- Stats Preview -->
    <div class="stats-preview">
        <div class="stat-card">
            <i class="bi bi-egg-fill"></i>
            <h6>مبيعات البيض</h6>
            <div class="stat-value">تقارير شاملة</div>
        </div>
        <div class="stat-card">
            <i class="bi bi-recycle"></i>
            <h6>مبيعات المخلفات</h6>
            <div class="stat-value">بيانات دقيقة</div>
        </div>
        <div class="stat-card">
            <i class="bi bi-layers-fill"></i>
            <h6>مبيعات القطيع</h6>
            <div class="stat-value">تحليل متقدم</div>
        </div>
    </div>

    <div class="info-card">
        <h5>
            <i class="bi bi-info-circle-fill"></i>
            محتويات التقرير الشامل
        </h5>
        <ul>
            <li><strong>مبيعات البيض:</strong> إجمالي مبيعات البيض للتجار مع التفاصيل الكاملة</li>
            <li><strong>مبيعات المخلفات:</strong> إجمالي مبيعات المخلفات والنفايات بالأمتار</li>
            <li><strong>مبيعات القطيع:</strong> إجمالي مبيعات القطيع الأبيض والبني بالتفصيل</li>
            <li><strong>التحليل الإحصائي:</strong> نسب مئوية وتحليلات شاملة لكل فئة</li>
        </ul>
    </div>

    <form asp-controller="SalesReport" asp-action="ExportSalesDataExcel" method="get">
        <!-- Option 1: Date Range -->
        <div class="filter-section">
            <h4>
                <i class="bi bi-calendar-range"></i>
                الخيار الأول: تحديد فترة زمنية
            </h4>
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="from" class="form-label">
                        <i class="bi bi-calendar-check"></i>
                        من تاريخ
                    </label>
                    <input type="date" id="from" name="from" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label for="to" class="form-label">
                        <i class="bi bi-calendar-check"></i>
                        إلى تاريخ
                    </label>
                    <input type="date" id="to" name="to" class="form-control" />
                </div>
            </div>
        </div>

        <div class="option-divider">
            <span>أو</span>
        </div>

        <!-- Option 2: Single Month -->
        <div class="filter-section">
            <h4>
                <i class="bi bi-calendar-month"></i>
                الخيار الثاني: تحديد شهر محدد
            </h4>
            <div class="row">
                <div class="col-md-12">
                    <label for="month" class="form-label">
                        <i class="bi bi-calendar3"></i>
                        اختر الشهر
                    </label>
                    <select id="month" name="month" class="form-select">
                        <option value="">-- اختر الشهر --</option>
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option value="@i">
                                @System.Globalization.CultureInfo.GetCultureInfo("ar-EG").DateTimeFormat.GetMonthName(i)
                            </option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="option-divider">
            <span>أو</span>
        </div>

        <!-- Option 3: All Data -->
        <div class="alert-info-custom">
            <i class="bi bi-lightbulb-fill"></i>
            <strong>ملاحظة هامة:</strong> إذا لم تحدد أي خيار، سيتم تصدير جميع البيانات لجميع الأشهر في السنة الحالية مع تحليل شامل
        </div>

        <!-- Export Button -->
        <button type="submit" class="btn btn-export">
            <i class="bi bi-file-earmark-excel-fill"></i>
            <span>تصدير التقرير إلى Excel</span>
        </button>
    </form>

    <!-- Features Section -->
    <div class="features-container">
        <div class="feature-badge">
            <i class="bi bi-check-circle-fill"></i>
            تقرير شامل
        </div>
        <div class="feature-badge">
            <i class="bi bi-graph-up-arrow"></i>
            إحصائيات تفصيلية
        </div>
        <div class="feature-badge">
            <i class="bi bi-percent"></i>
            نسب مئوية
        </div>
        <div class="feature-badge">
            <i class="bi bi-palette-fill"></i>
            تنسيق احترافي
        </div>
        <div class="feature-badge">
            <i class="bi bi-translate"></i>
            دعم العربية
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Clear other fields when one is selected
            $('#from, #to').on('change', function() {
                if ($(this).val()) {
                    $('#month').val('');
                }
            });

            $('#month').on('change', function() {
                if ($(this).val()) {
                    $('#from').val('');
                    $('#to').val('');
                }
            });

            // Form validation
            $('form').on('submit', function(e) {
                var from = $('#from').val();
                var to = $('#to').val();
                var month = $('#month').val();

                // If date range is selected, both dates must be filled
                if ((from && !to) || (!from && to)) {
                    e.preventDefault();
                    alert('يرجى تحديد تاريخ البداية والنهاية معاً');
                    return false;
                }

                // If date range is selected, from must be before to
                if (from && to && from > to) {
                    e.preventDefault();
                    alert('تاريخ البداية يجب أن يكون قبل تاريخ النهاية');
                    return false;
                }

                // Add loading animation
                $('.btn-export').html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> جاري التصدير...');
                $('.btn-export').prop('disabled', true);

                return true;
            });

            // Add hover effects to filter sections
            $('.filter-section').on('mouseenter', function() {
                $(this).find('input, select').first().focus();
            });
        });
    </script>
}

