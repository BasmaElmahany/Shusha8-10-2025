@page
@model LoginModel

@{
    Layout = null; // Disable the shared layout
    ViewData["Title"] = "تسجيل دخول";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Application</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-image: url("/uploads/OIP (2).jpg");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            margin: 0;
            padding: 0;
            height: 100vh;
            width: 100%;
            overflow: hidden;
        }

        .login-container {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
            background: rgba(255, 255, 255, 0.85); /* Semi-transparent background */
            overflow: hidden;
            width: 100%;
        }

        .card-header {
            background: #f8f9fa;
            color: #333;
            padding: 20px;
            text-align: center;
            font-size: 1.6rem;
            font-weight: bold;
            border-bottom: 1px solid #e0e0e0;
        }

        .card-body {
            padding: 40px;
            background: none;
        }

        .form-floating input {
            border-radius: 10px;
            border: 1px solid #ddd;
            box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.05);
            font-size: 1rem;
            padding: 10px;
            transition: all 0.3s ease;
        }

            .form-floating input:focus {
                border-color: #4a90e2;
                box-shadow: 0 0 8px rgba(74, 144, 226, 0.5);
                outline: none;
            }

        .btn-primary {
            background-color: #4a90e2;
            border: none;
            border-radius: 10px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s, transform 0.2s;
            padding: 12px 20px;
        }

            .btn-primary:hover {
                background-color: #3a78c1;
                transform: translateY(-2px);
            }

        .form-check-label {
            font-size: 1rem;
        }

        .text-center a {
            color: #4a90e2;
            font-size: 1rem;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .text-center a:hover {
                color: #3a78c1;
            }

        .alert-danger {
            border-radius: 10px;
            font-size: 1rem;
            margin-top: 15px;
        }

        /* Responsiveness */
     
    </style>
</head>
<body>
    <div class="container login-container">
        <div class="col-lg-5 col-md-8 col-sm-10">
            <div class="card">
                <div class="card-header">
                    تسجيل دخول
                </div>
                <div class="card-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Email Input -->
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">اسم المستخدم</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password Input -->
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" placeholder="password" />
                            <label asp-for="Input.Password">كلمة المرور</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me -->
                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMe" />
                            <label class="form-check-label" for="rememberMe">تذكرني</label>
                        </div>

                        <!-- Login Button -->
                        <div class="d-grid">
                            <button id="login-submit" type="submit" class="btn btn-primary">تسجيل دخول</button>
                        </div>

                        <!-- Links -->
                        @*<div class="text-center mt-4">
                            <a id="forgot-password" asp-page="./ForgotPassword">هل نسيت كلمة المرور؟</a>
                        </div>
                        <div class="text-center mt-2">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">تسجيل مستخدم جديد</a>
                        </div>
                        <div class="text-center mt-2">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">إعادة إرسال تأكيد البريد الإلكتروني</a>
                        </div>*@
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
